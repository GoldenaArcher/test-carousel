{
  "plugins": ["react"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "browser": true
  },
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-console": "warn",
    "no-unused-vars": "warn",
    "react/jsx-uses-react": "error",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "versions": "detect"
    }
  }
}
